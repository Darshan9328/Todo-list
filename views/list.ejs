<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
<%   newListItems.forEach((item) => { %>
  <form  action="/delete"  method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
      <p><%= item.Item %></p>
    </div>
    <input type="hidden" name="name" value="<%= listTitle %>"></input>
  </form>

  <% });%>

      <form class="item" action="/insert" method="post">
        <input type="text" name="newItem" placeholder="Add a task" autocomplete="off">
        <button  type="submit" value="<%=listTitle%>" name="name">+</button>
      </form>
  </div>

<%- include("footer") -%>
